{
  "settings": {
    "analysis": {
      "analyzer": {
        "custom_standard": {
          "type": "custom",
          "tokenizer": "classic",
          "filter": [
            "english_stop",
            "asciifolding",
            "lowercase",
            "roman_to_latin",
            "shingle_filter"
          ]
        }
      },
      "filter": {
        "shingle_filter": {
          "type": "shingle",
          "max_shingle_size": 3,
          "min_shingle_size": 2,
          "output_unigrams": true,
          "token_separator": ""
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "roman_to_latin": {
          "type": "synonym",
          "synonyms": [
            "i, 1",
            "ii, 2",
            "iii, 3",
            "iv, 4",
            "v, 5",
            "vi, 6",
            "vii, 7",
            "viii, 8",
            "ix, 9",
            "x, 10",
            "eleven, 11"
          ]
        }
      }
    }
  }
}